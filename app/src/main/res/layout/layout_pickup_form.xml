<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/sender_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/grayBorder"
        app:cardBackgroundColor="@color/white"
        android:layout_marginHorizontal="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/layout_sender_detail_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/title_icon_sender_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon_sender"
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:contentDescription="@string/icon_origin_estimate"
                    android:src="@drawable/round_contact_mail_24"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/title_card"
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:layout_height="wrap_content"
                    style="@style/Theme.GolingAndroid.Title"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp"
                    android:text="@string/detail_pengirim"/>

                <ImageView
                    android:id="@+id/icon_navigate_form"
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:contentDescription="@string/icon_origin_estimate"
                    android:src="@drawable/round_chevron_right_24"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/sender_namelayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/name_Sender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Theme.GolingAndroid.Title"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:text="Okta"/>

                <TextView
                    android:id="@+id/phone_Sender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Theme.GolingAndroid.Title"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_marginStart="4dp"
                    android:text="(08222567899)"/>

            </LinearLayout>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_address_sender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/graySecondary"
                android:layout_marginTop="4dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="0dp"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:textSize="12sp"
                    android:text="Jl. Mangga "
                    />

            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/recepient_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/grayBorder"
        app:cardBackgroundColor="@color/white"
        android:layout_marginHorizontal="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/title_icon_recepient_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon_recepient"
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:contentDescription="@string/icon_origin_estimate"
                    android:src="@drawable/baseline_markunread_mailbox_24"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/title_card_recepient"
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:layout_height="wrap_content"
                    style="@style/Theme.GolingAndroid.Title"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp"
                    android:text="Detail Penerima"/>

                <ImageView
                    android:id="@+id/icon_navigate_recepient_form"
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:contentDescription="@string/icon_origin_estimate"
                    android:src="@drawable/round_chevron_right_24"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/recepient_namelayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/name_recepient_Sender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Theme.GolingAndroid.Title"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:text="Okta"/>

                <TextView
                    android:id="@+id/phone_recepient_Sender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Theme.GolingAndroid.Title"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_marginStart="4dp"
                    android:text="(08222567899)"/>

            </LinearLayout>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_address_recepient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/graySecondary"
                app:cardCornerRadius="4dp"
                app:cardElevation="0dp"
                android:layout_marginTop="4dp"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:textSize="12sp"
                    android:text="Jl. Mangga"
                    />

            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/item_package_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/grayBorder"
        app:cardBackgroundColor="@color/white"
        android:layout_marginHorizontal="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/title_item_doc_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon_item_doc_detail"
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:contentDescription="@string/icon_origin_estimate"
                    android:src="@drawable/round_contact_mail_24"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/title_item_detail"
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:layout_height="wrap_content"
                    style="@style/Theme.GolingAndroid.Title"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp"
                    android:text="Item Yang Dikirim"/>

                <ImageView
                    android:id="@+id/icon_navigate_item_form_detail"
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:contentDescription="@string/icon_origin_estimate"
                    android:src="@drawable/round_chevron_right_24"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_detail_packet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/graySecondary"
                app:cardCornerRadius="4dp"
                android:layout_marginTop="4dp"
                app:cardElevation="0dp"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/name_item_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textSize="12sp"
                        style="@style/Theme.GolingAndroid.Title"
                        android:text="Nama barang"
                        />

                    <TextView
                        android:id="@+id/name_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:textSize="12sp"
                        style="@style/Theme.GolingAndroid.Body"
                        android:text="File"
                        android:textStyle="normal"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/type_item"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:textSize="12sp"
                                style="@style/Theme.GolingAndroid.Title"
                                android:text="Tipe Barang"
                                />

                            <TextView
                                android:id="@+id/jenis_item"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:textSize="12sp"
                                style="@style/Theme.GolingAndroid.Body"
                                android:text="Document"
                                android:textStyle="normal"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/weight_title_item"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:textSize="12sp"
                                style="@style/Theme.GolingAndroid.Title"
                                android:text=" Berat Barang"
                                />

                            <TextView
                                android:id="@+id/weight_item"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:textSize="12sp"
                                style="@style/Theme.GolingAndroid.Body"
                                android:text="5kg"
                                android:textStyle="normal"
                                />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/dimension_title_item"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:textSize="12sp"
                                style="@style/Theme.GolingAndroid.Title"
                                android:text="Dimensi Barang"
                                />

                            <TextView
                                android:id="@+id/dimension_item"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:textSize="12sp"
                                style="@style/Theme.GolingAndroid.Body"
                                android:text="18 x 16 x 14 cm"
                                android:textStyle="normal"
                                />

                        </LinearLayout>



                    </LinearLayout>



                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/summary_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/grayBorder"
        app:cardBackgroundColor="@color/white"
        android:layout_marginHorizontal="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:text="estimasi"/>

                <TextView
                    android:id="@+id/estimation_send"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textAlignment="textEnd"
                    android:text="2 - 3 hari"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/include_assurance_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:text="Biaya Asuransi"/>

                <TextView
                    android:id="@+id/include_assurance_send"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textAlignment="textEnd"
                    android:text="Rp. 200"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="12dp"
                android:background="@color/secondaryColor"/>


            <LinearLayout
                android:id="@+id/total_amount_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:text="Total"/>

                <TextView
                    android:id="@+id/total_amount_send"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textAlignment="textEnd"
                    android:text="Rp. 32,000"/>

            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_pay"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="12dp"
        style="@style/Widget.Material3.Button"
        app:backgroundTint="@color/darkBlue"
        android:text="Lanjutkan Pembayaran"
        android:textColor="@color/white"
        app:cornerRadius="8dp"
        android:layout_marginHorizontal="16dp"/>



</LinearLayout>