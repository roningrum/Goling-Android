<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/graySecondary"
    android:paddingHorizontal="16dp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_recepient_location_layout"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:hintEnabled="false"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:hintTextAppearance="@style/Theme.GolingAndroid.TextInputLayout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_recepient_origin_edit_text"
            style="@style/Theme.GolingAndroid.InputText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:minLines="2"
            android:maxLines="5"
            android:inputType="textMultiLine"
            android:focusableInTouchMode="false"
            android:hint="Lokasi Penerima"
            android:padding="0dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_recepient_address_layout"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxBackgroundColor="@color/white"
        app:hintEnabled="false"
        app:helperText="alamat lengkap beserta kelurahan, kecamatan, kode pos)"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/input_recepient_location_layout"
        app:hintTextAppearance="@style/Theme.GolingAndroid.TextInputLayout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_recepient_address_edit_text"
            style="@style/Theme.GolingAndroid.InputText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:hint="Alamat Penerima"
            android:minLines="2"
            android:maxLines="5"
            android:gravity="top"
            android:padding="8dp" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_recepient_name_layout"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxBackgroundColor="@color/white"
        app:hintEnabled="false"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/input_recepient_address_layout"
        app:hintTextAppearance="@style/Theme.GolingAndroid.TextInputLayout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_recepient_name_edit_text"
            style="@style/Theme.GolingAndroid.InputText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Nama Penerima"
            android:padding="0dp" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_recepient_phone_layout"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxBackgroundColor="@color/white"
        app:hintEnabled="false"
        app:helperText="Pastikan nomor pengguna aktif"
        android:layout_marginTop="16dp"
        app:hintTextAppearance="@style/Theme.GolingAndroid.TextInputLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_recepient_name_layout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_recepient_phone_edit_text"
            style="@style/Theme.GolingAndroid.InputText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Nomor Hp"
            android:maxLength="12"
            android:inputType="phone"
            android:padding="0dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_use_recepip_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:minHeight="56dp"
        android:text="Gunakan Detail Penerima"
        android:textColor="@color/white"
        app:backgroundTint="@color/darkBlue"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_recepient_phone_layout" />



</androidx.constraintlayout.widget.ConstraintLayout>