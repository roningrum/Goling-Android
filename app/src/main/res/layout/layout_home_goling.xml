<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#F8F8F8"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/home_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="?attr/actionBarSize"
        android:background="@color/white"
        app:titleCentered="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/logo_image_home"
            android:layout_width="84dp"
            android:layout_height="56dp"
            android:src="@drawable/goling_app_logo"
            android:contentDescription="@string/content_desc_toolbar"/>
    </com.google.android.material.appbar.MaterialToolbar>

    <FrameLayout
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_toolbar">
        <include
            android:id="@+id/layout_home_wallet"
            layout="@layout/layout_home_profile_wallet"/>
    </FrameLayout>

    <TextView
        android:id="@+id/title_order_service"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        style="@style/Theme.GolingAndroid.AppSubtitle"
        android:fontFamily="@font/rubik"
        android:textSize="16sp"
        android:textColor="@color/darkBlue"
        android:textFontWeight="700"
        android:text="@string/service_order_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_header" />

    <FrameLayout
        android:id="@+id/service_order_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title_order_service"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <include layout="@layout/layout_home_goling_menu"/>
    </FrameLayout>



</androidx.constraintlayout.widget.ConstraintLayout>