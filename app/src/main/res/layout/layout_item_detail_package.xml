<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <LinearLayout
                android:id="@+id/layout_select_type_package"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title_select_type"
                    style="@style/Theme.GolingAndroid.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/rubik_bold"
                    android:text="Pilih Kategori Paket"
                    android:textSize="14sp" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:chipSpacing="2dp"
                    app:singleSelection="true">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_product_type_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kemeja"
                        android:textAlignment="center"
                        app:chipBackgroundColor="@color/white"
                        app:chipStrokeColor="@color/grayBorder"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_product_type_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text="Obat"
                        android:textAlignment="center"
                        app:chipBackgroundColor="@color/white"
                        app:chipStrokeColor="@color/grayBorder"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_product_type_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dokumen"
                        android:textAlignment="center"
                        app:chipBackgroundColor="@color/white"
                        app:chipStrokeColor="@color/grayBorder"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_product_type_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dry Food"
                        android:textAlignment="center"
                        app:chipBackgroundColor="@color/white"
                        app:chipStrokeColor="@color/grayBorder"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_product_type_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Frozen Food"
                        android:textAlignment="center"
                        app:chipBackgroundColor="@color/white"
                        app:chipStrokeColor="@color/grayBorder"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_product_type_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Elektronik"
                        android:textAlignment="center"
                        app:chipBackgroundColor="@color/white"
                        app:chipStrokeColor="@color/grayBorder"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_product_type_7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Others"
                        android:textAlignment="center"
                        app:chipBackgroundColor="@color/white"
                        app:chipStrokeColor="@color/grayBorder"
                        app:chipStrokeWidth="1dp" />
                </com.google.android.material.chip.ChipGroup>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_item_detail_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_item_name_layout"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@color/white"
                    app:hintEnabled="false"
                    app:hintTextAppearance="@style/Theme.GolingAndroid.TextInputLayout">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/input_item_name_edit_text"
                        style="@style/Theme.GolingAndroid.InputText"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:hint="Nama barang"
                        android:padding="0dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Pastikan nama barang sesuai"
                    android:textColor="@color/grayBorder"
                    android:textSize="12sp" />
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_item_weight_layout"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@color/white"
                app:hintEnabled="false"
                app:hintTextAppearance="@style/Theme.GolingAndroid.TextInputLayout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_item_weight_edit"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Berat Barang"
                    style="@style/Theme.GolingAndroid.InputText"
                    android:padding="0dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <CheckBox
                android:id="@+id/button_checked_insurance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:buttonTint="@color/grayBorder"
                android:textAppearance="@style/Theme.GolingAndroid.InputText"
                android:text="Mudah pecah" />

            <TextView
                android:id="@+id/title_item_dimension"
                style="@style/Theme.GolingAndroid.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:fontFamily="@font/rubik_bold"
                android:text="Ukuran Paket"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:weightSum="3">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_size_layout"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    app:hintEnabled="false"
                    app:hintTextAppearance="@style/Theme.GolingAndroid.TextInputLayout">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/input_length_edit"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="Panjang (cm)"
                        style="@style/Theme.GolingAndroid.InputText"
                        android:padding="0dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_width_layout"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    app:hintEnabled="false"
                    app:hintTextAppearance="@style/Theme.GolingAndroid.TextInputLayout">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/input_width_edit"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="Lebar (cm)"
                        style="@style/Theme.GolingAndroid.InputText"
                        android:padding="0dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_height_layout"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    app:hintEnabled="false"
                    app:hintTextAppearance="@style/Theme.GolingAndroid.TextInputLayout">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/input_height_edit"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="Tinggi (cm)"
                        style="@style/Theme.GolingAndroid.InputText"
                        android:padding="0dp" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/title_item_upload_barang"
                style="@style/Theme.GolingAndroid.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:fontFamily="@font/rubik_bold"
                android:text="Ukuran Paket"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/subt_item_upload_barang"
                android:textColor="@color/grayBorder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Foto Barang Yang akan dikirim"
                android:textSize="12sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_form_upload_photo">

                <ImageView
                    android:id="@+id/img_photo_camera"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/baseline_camera_alt_24"
                    android:layout_centerInParent="true"
                    />

                <ImageView
                    android:id="@+id/img_preview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:layout_centerInParent="true"
                    />

            </RelativeLayout>



            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_check_estimate"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                app:cornerRadius="8dp"
                android:backgroundTint="@color/darkBlue"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginTop="24dp"
                android:text="Simpan Detail Paket" />
        </LinearLayout>
    </ScrollView>


</layout>