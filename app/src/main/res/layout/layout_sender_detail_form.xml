<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/graySecondary"
    android:paddingHorizontal="16dp"
    android:layout_height="match_parent">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_sender_location_layout"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:hintEnabled="false"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:hintTextAppearance="@style/Theme.GolingAndroid.TextInputLayout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_sender_origin_edit_text"
            style="@style/Theme.GolingAndroid.InputText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="Lokasi Pengirim"
            android:padding="0dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_sender_address_layout"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:hintEnabled="false"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/input_sender_location_layout"
        app:hintTextAppearance="@style/Theme.GolingAndroid.TextInputLayout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_sender_address_edit_text"
            style="@style/Theme.GolingAndroid.InputText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:maxLines="2"
            android:hint="Alamat Pengirim"
            android:padding="0dp" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_sender_name_layout"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:hintEnabled="false"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/input_sender_address_layout"
        app:hintTextAppearance="@style/Theme.GolingAndroid.TextInputLayout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_sender_name_edit_text"
            style="@style/Theme.GolingAndroid.InputText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="textPersonName"
            android:hint="Nama Pengirim"
            android:padding="0dp" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_sender_phone_layout"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:hintEnabled="false"
        android:layout_marginTop="16dp"
        app:hintTextAppearance="@style/Theme.GolingAndroid.TextInputLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_sender_name_layout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_sender_phone_edit_text"
            style="@style/Theme.GolingAndroid.InputText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:maxLength="12"
            android:hint="Nomor Hp"
            android:inputType="phone"
            android:padding="0dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_use_sender_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:minHeight="56dp"
        android:text="Gunakan Detail Pengirim"
        android:textColor="@color/white"
        app:backgroundTint="@color/darkBlue"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_sender_phone_layout" />




</androidx.constraintlayout.widget.ConstraintLayout>