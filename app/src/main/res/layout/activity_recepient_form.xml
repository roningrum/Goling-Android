<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.feature.pickup.RecepientFormActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/sender_form_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Form Penerima"
        app:titleTextAppearance="@style/Theme.GolingAndroid.Title"
        app:titleTextColor="@color/darkBlue"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/sender_form_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <include
            android:id="@+id/layout_sender_form"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/layout_recepient_form"
            />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>